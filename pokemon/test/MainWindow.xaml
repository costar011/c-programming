<Window x:Class="test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:test"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="innerContainer">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.22*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Background="LightGray" Grid.Row="0" Margin="0,10,0,5">
                <Grid Margin="10">
                    <TextBlock x:Name="txtNumber" Text="No. 0025" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24"/>
                    <TextBlock x:Name="txtName" Text="피카츄" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="30" FontWeight="Bold"/>
                </Grid>
            </Border>

            <Border CornerRadius="10" Background="LightGray" Grid.Row="1" Margin="0,5">
                <Grid Margin="10">
                    <TextBlock Text="타입"  HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" />
                    <TextBlock x:Name="txttype" Text="전기 타입" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" />
                </Grid>
            </Border>

            <Border CornerRadius="10" Background="LightGray" Grid.Row="2" Margin="0,5">
                <Grid Margin="10">
                    <TextBlock Text="종류" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" />
                    <TextBlock x:Name="txtCategory" Text="쥐 포켓몬" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" />
                </Grid>
            </Border>

            <Border CornerRadius="10" Background="LightGray" Grid.Row="3" Margin="0,5">
                <Grid Margin="10">
                    <TextBlock Text="키" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" />
                    <TextBlock x:Name="txtHeight" Text="0.4m" Grid.Column="0" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" />
                </Grid>
            </Border>

            <Border CornerRadius="10" Background="LightGray" Grid.Row="4" Margin="0,5">
                <Grid Margin="10">
                    <TextBlock Text="몸무게" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" />
                    <TextBlock x:Name="txtWeight" Text="6kg" Grid.Column="0" Grid.Row="4" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" />
                </Grid>
            </Border>

            <Border CornerRadius="10" Background="LightGray" Grid.Row="5" Margin="0,5">
                <Grid Margin="10">
                    <TextBlock Text="진화" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" />
                    <TextBlock x:Name="txtEvolution" Text="라이츄" Grid.Column="0" Grid.Row="5" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="24" />
                </Grid>
            </Border>


        </Grid>



        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>


            <Button Content="다른 포켓몬" Width="100" Height="30" FontSize="16" Background="DarkGray" Foreground="White" Margin="20" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click_1">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="7"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Grid>

        <Grid Grid.Column="2" Margin="50" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image x:Name="pokemonImage" Source="C:\Users\Yerim\OneDrive\바탕 화면\pokemon\test\pica.png" />

        </Grid>




    </Grid>
</Window>
